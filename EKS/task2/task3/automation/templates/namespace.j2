
provider "kubernetes" {
  host                   = "{{ cluster_endpoint }}"
  exec {
    api_version = "client.authentication.k8s.io/v1beta1"
    args        = ["eks", "get-token", "--cluster-name", {{ cluster_name }}]
    command     = "aws"
  }
}


resource "kubernetes_namespace" "auto_namespace" {
  metadata {
    name = "{{ namespace }}"
  }
}

